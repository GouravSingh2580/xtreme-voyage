                    {
                        return;
                    }
                   if(a[a.length-3]==",")
                   {
                       
                   
                      b=a
                    b=b.replace(b.substring(b.length-2,b.length),changed)
                    console.log(b);
                 
                   }
                   else  
                   {  b=a;
                      b= b.replace(b.substring(b.length-3,b.length),changed)
                   }
